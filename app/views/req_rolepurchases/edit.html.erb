<%= req_edit_header("Редактировать заявку на закупку с ролями", "req_rolepurchases", "Заявки на закупку", "Заявка на закупку") %>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
      <div class="col-lg-12">
          <div class="ibox float-e-margins">
              <div class="ibox-title">
                <h5>Редактирование заявки на закупку</h5>
                  <div class="ibox-tools">
                      <a class="collapse-link">
                          <i class="fa fa-chevron-up"></i>
                      </a>
                      <a class="close-link">
                          <i class="fa fa-times"></i>
                      </a>
                  </div>
              </div>
              <div class="ibox-content">
                <%= render 'shared/actions_and_assignees' %>
                <div class="hr-line-dashed"></div>
                <%= simple_form_for(@req) do |f| %>
                  <%= f.input :id, disabled: true %>
                  <%= f.input :state, disabled: true %>
                  <%= f.input :assign_user_id, collection: @req.users_list, label_method: :name, value_method: :id, :label => "Выберите клиентского менеджера", required: true %>
                  <%= f.input :name, disabled: @req.is_disabled?("name") %>
                  <%= f.input :money, disabled: @req.is_disabled?("money") %>
                  <%= render 'shared/req_edit_buttons', f: f %>
                <% end %>
              </div>
          </div>
      </div>
  </div>
</div>
